/*
public class CustomListFramework {

    static void useList(MyList<?> list) {
        try {
            System.out.println("Size: " + list.size());
            System.out.println("Element at 0: " + list.get(0));
            list.delete(5); // force exception
        } catch (Exception e) {
            System.out.println("Exception caught: " + e);
        } finally {
            System.out.println("Execution finished\n");
        }
    }

    public static void main (String[] args) {

        MyList<Integer> list1 = new MyArrayList<>();
        list1.add(10);
        list1.add(20);
        list1.insert(15, 1);

        MyList<String> list2 = new MyLinkedList<>();
        list2.add("A");
        list2.add("B");
        list2.delete(0);

        useList(list1);
        useList(list2);
    }
}
*/
